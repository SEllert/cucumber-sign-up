{
    "default": {
        "require": [
            "src/steps/**/*.ts",
            "scripts/hooks.ts"
        ],
        "paths": [
            "src/features/**/*.feature"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "allure-cucumberjs/reporter"
        ],
        "formatOptions": {
            "snippetInterface": "async-await",
            "resultsDir": "allure-results",
            "environmentInfo": {
                "os_platform": "Windows",
                "os_release": "10",
                "node_version": "v22.17.0",
                "cucumber_version": "12.1.0",
                "browser": "Chrome",
                "environment": "Staging"
                }
            }
        }
    }